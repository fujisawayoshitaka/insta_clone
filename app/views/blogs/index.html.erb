<p id="notice"><%= notice %></p>

<h1>Blog一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.user.name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <% if blog.image.blank?%>
          <td><%= "no image"  %></td>
        <% else%>
          <td><%= image_tag(blog.image.url)  %></td>
        <% end %>
        <td class="label label-success"><%= link_to 'Show', blog %></td>
        <% if current_user.id == blog.user.id %>
        <td class="label label-info"><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td class="label label-danger"><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="label label-danger"><%= link_to '新しくブログを投稿する', new_blog_path %></p>
